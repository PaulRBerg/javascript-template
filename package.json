{
  "name": "@paulrberg/javascript-template",
  "description": "A template for developing JavaScript projects, with sensible defaults",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/paulrberg"
  },
  "bugs": {
    "url": "https://github.com/paulrberg/javascript-template/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "shx": "^0.3.4"
  },
  "homepage": "https://github.com/paulrberg/javascript-template#readme",
  "keywords": [
    "eslint",
    "javascript",
    "prettier",
    "template",
    "yarn"
  ],
  "packageManager": "yarn@3.2.2",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrberg/javascript-template"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "lint": "yarn lint:js && yarn prettier:check",
    "lint:js": "eslint --ext .js .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "postpack": "pinst --enable",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,yml}\"",
    "prepack": "pinst --disable"
  }
}
