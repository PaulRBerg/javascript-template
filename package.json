{
  "name": "@paulrberg/javascript-template",
  "description": "Template for JavaScript projects",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/paulrberg"
  },
  "bugs": {
    "url": "https://github.com/paulrberg/javascript-template/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.5",
    "pinst": "^3.0.0",
    "prettier": "^2.5.1",
    "shx": "^0.3.4"
  },
  "homepage": "https://github.com/paulrberg/javascript-template#readme",
  "packageManager": "yarn@3.2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrberg/javascript-template"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "commit": "git-cz",
    "lint": "yarn lint:js && yarn prettier:check",
    "lint:js": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yaml --ignore-path ./.prettierignore --write \"**/*.{js,json,md,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml --ignore-path ./.prettierignore \"**/*.{js,json,md,yaml,yml}\"",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  }
}
